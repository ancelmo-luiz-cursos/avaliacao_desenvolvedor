<form method="post" enctype="multipart/form-data" asp-controller="Arquivo" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Enviar um ou mais arquivos:</p>
            <input type="file" name="arquivos" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Enviar" />
        </div>
    </div>
</form>